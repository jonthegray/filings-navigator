{
  // https://www.typescriptlang.org/tsconfig
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react-jsxdev",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "exclude": [
    "esbuild.mjs",
    "esbuild-plugin-*.mjs"
  ]
}
